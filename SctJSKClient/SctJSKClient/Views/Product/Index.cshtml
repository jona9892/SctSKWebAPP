@model IEnumerable<DTOModel.Product>

@{
    ViewBag.Title = "Index";
}
<style>
    #text {
        color: #428bca;
    }
</style>
<h2>Produkter</h2>

<p>
    @Html.ActionLink("Tilføj ny produkt", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Titel", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th id="text">
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.ActionLink("Pris", "Index", new { sortOrder = ViewBag.PriceSortParm })
        </th>
        <th id="text">
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.ActionLink("Kategori", "Index", new { sortOrder = ViewBag.CategorySortParm })
        </th>
        <th id="text">
            @Html.DisplayNameFor(model => model.availableforStudents)
        </th>
        <th id="text">
            @Html.DisplayNameFor(model => model.onlyForHeadmasters)
        </th>
            
        <th>
          
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <img src="@item.Image" alt="Product" style="width:100px;height:100px;">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.availableforStudents)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.onlyForHeadmasters)
        </td>
        <td>
            @Html.ActionLink("Redigere", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Fjern", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
