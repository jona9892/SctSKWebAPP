@{
    var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
    string cLayout = "";
    if(controller == "Administration" || controller == "User" || controller == "Product" || controller == "Category" || controller == "Arrangement" || controller == "Sale")
    {
        cLayout = "~/Views/Shared/_Administration.cshtml";
    }
    else if (controller == "Profile")
    {
        cLayout = "~/Views/Shared/_UserProfile.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }
    Layout = cLayout;
}
