@model SctJSKClient.ViewModels.PollOptionViewModel

<div>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title" style="text-align:center; font-size:20px;">@Model.Poll.Question</h2>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.Poll.Id)
                @Html.AntiForgeryToken()
                <table class="table table-hover custab" style="background-color:white">
                    @foreach (var poll in Model.Poll.PollOptions)
                {
                        <tr>
                            <td class="prod_title">@poll.OptionText</td>
                            <td> <input type="radio" name="selected" value="@poll.Id" autocomplete="off" /></td>
                        </tr>
                    }
                </table>
                <input type="submit" value="Gem" class="btn btn-primary pull-right" style="width:100%; float: right" />
                <a href="@Url.Action("Index", "Poll")" class="btn btn-danger pull-left">Tilbage</a>
            }
        </div>
    </div>

</div>
