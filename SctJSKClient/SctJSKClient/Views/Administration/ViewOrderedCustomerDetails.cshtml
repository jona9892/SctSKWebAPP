@model DTOModel.Order

@{
    ViewBag.Title = "ViewOrderedCustomerDetails";
}

<div class="container">
    <div class="row">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-user"></span>Bruger: @Model.User.FirstName @Model.User.LastName - OrdreNr: @Model.Id</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="items">
                        <div class="col-md-9">
                            <table class="table table-striped">
                                <tr>
                                    <td>
                                        @foreach (var item in Model.OrderDetails)
                                        {
                                            <ul>
                                                @{
                                                    var ps = @item.Quantity * @item.Price;
                                                }
                                                <li style="font-weight:bold">@item.Product.Title</li>
                                                <li>Antal: @item.Quantity</li>
                                                <li>Pris per styk: @item.Price dk</li>
                                                <li>Pris i alt:@ps dk</li>
                                            </ul>
                                           }
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-3">
                            <div style="text-align: center;">
                                @{
                                    var sum = Model.OrderDetails.Sum(x => x.Quantity * x.Product.Price);
                                }
                                <h3>Ordre Total</h3>
                                <h3><span style="color:green;">@sum dk</span></h3>
                            </div>
                        </div>
                    </div>

                    <hr>
                </div>
            </div>
    </div>
    <div class="panel-footer">
        <div class="row text-center">
            <div class="col-xs-3">
                <a href="@Request.UrlReferrer" class="btn btn-success btn-block"><span class="glyphicon glyphicon-chevron-left"></span>Tilbage</a>
            </div>
        </div>
    </div>
</div>