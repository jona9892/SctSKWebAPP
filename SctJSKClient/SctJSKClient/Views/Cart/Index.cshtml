@using SctJSKClient.Models

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Indløbskurv</h5>
                            </div>
                            <div class="col-xs-6">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-sm btn-block">
                                   <span class="glyphicon glyphicon-share-alt"></span> Continue shopping
                                </a>                                
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @{
                        int i = 0;
                    }
                    @if (Session["cart"] != null)
                    {
                        foreach (var item in (List<Item>)Session["cart"])
                        {
                            <div class="row">
                                <div class="col-xs-2">
                                    <img class="img-responsive" src="@item.product.Image">
                                </div>
                                <div class="col-xs-4">
                                    <h4 class="product-name"><strong>@item.product.Title</strong></h4><h4><small>@item.product.Description</small></h4>
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-6 text-right">
                                        <h6><strong>@item.product.Price<span class="text-muted">x</span></strong></h6>
                                    </div>
                                    <div class="col-xs-4">
                                        <input type="text" class="form-control input-sm" value="@item.quantity">
                                    </div>
                                    <div class="col-xs-2">
                                        <button type="button" class="btn btn-link btn-xs">
                                            <a href="@Url.Action("Delete", "Cart", new { id = i })"><span class="glyphicon glyphicon-trash"> </span></a> 
                                        </button>
                                    </div>
                                 </div>
                            </div>
                            i++;
                            <hr>
                        }
                    }
                    <hr>                    
                </div>

                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            @{
                                decimal s = 0;
                                if (Session["cart"] != null)
                                {
                                    List<Item> cart = (List<Item>)Session["cart"];
                                    s = cart.Sum(x => x.quantity * x.product.Price);
                                }

                            }
                            <h4 class="text-right">Total: <strong>@s kr</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <a href="@Url.Action("SetOrderDates", "Cart")" class="btn btn-success btn-block">Videre &gt;</a>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>